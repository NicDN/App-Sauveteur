<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    
    <EditText
        android:hint="Nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nom"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heures des travail"
        android:id="@+id/txtViewHeureTravail"
        android:layout_below="@+id/editText_nom"/>
    
    <Spinner
        android:id="@+id/spinner_heures_travail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txtViewHeureTravail"
        android:layout_below="@+id/editText_nom"/>





</RelativeLayout>